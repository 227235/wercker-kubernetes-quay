{
  "apiVersion": "v1beta1",
  "kind": "ReplicationController",
  "id": "cities-controller",
  "desiredState": {
    "replicas": 3,
    "replicaSelector": { "name": "cities" },
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "cities-controller",
          "containers": [{
            "image": "quay.io/wercker/go-app",
            "name": "cities",
            "ports": [{ "name": "http-server", "containerPort": 5000 }]
          }]
        }
      },
      "labels": { "name": "cities" }
    }
  },
  "labels": { "name": "cities" }
}
